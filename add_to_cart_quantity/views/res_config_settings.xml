<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.website.sale</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website_sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <div class="col-12 col-lg-6 o_setting_box" id="comparator_option_setting" position="after">
                <div class="col-12 col-lg-6 o_setting_box" id="quantity_option_setting">
                    <div class="o_setting_left_pane">
                        <field name="show_quantity"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="show_quantity"/>
                        <div class="text-muted">
                            Allow shoppers to add products quantity on their shop page
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>
</odoo>