<?xml version="1.0" encoding="UTF-8" ?>
<templates id="remove_template" xml:space="preserve">
    <t t-name="RemoveButton" t-inherit="point_of_sale.Orderline" t-inherit-mode="extension" owl="1">
        <xpath expr="//li[hasclass('info')]" position="inside">
            <button class="btn btn-secondary remove-button" style="float:right; cursor: pointer; overflow: hidden;"
                    t-on-click="removeButtonClick">
                <i class="fa fa-remove"/>
            </button>
        </xpath>
    </t>
</templates>
