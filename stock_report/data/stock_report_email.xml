<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
<!--    Email template to send stock report-->
    <record id="stock_report_email_template" model="mail.template">
        <field name="name">Stock Report</field>
        <field name="model_id" ref="stock_report.model_stock_report_wizard"/>
        <field name="subject">Stock Report</field>
        <field name="body_html" type="html">
            <div style="margin: 0px; padding: 0px;">
                <p style="margin: 0px; padding: 0px; font-size: 13px;">
                    Hi,
                    <br/>
                    <br/>
                    Here is your Stock Report.
                </p>
                <br/>
                Regards,
                <br/>
            </div>
        </field>
    <field name="auto_delete" eval="True"/>
</record>
</odoo>