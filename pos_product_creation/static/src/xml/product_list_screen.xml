<!--                            </div>-->
<!--                        </section>-->
                        <section class="subwindow list">
                            <div class="subwindow-container">
                                <div class="subwindow-container-fix scrollable-y">
                                    <table class="partner-list">
                                        <thead>
                                            <tr>
                                                <th>Name</th>
                                                <th>Default Code</th>
                                                <th>Category</th>
                                                <th>List Price</th>
                                                <th>Edit</th>
                                            </tr>
                                        </thead>
                                        <tbody class="partner-list-contents">
                                            <t t-foreach="this.props.products" t-as="product"
                                               t-key="product.id">
                                                <tr>
                                                    <td><t t-esc="product.display_name"/></td>
                                                    <t t-if="product.default_code">
                                                        <td><t t-esc="product.default_code"/></td>
                                                    </t>
                                                    <t t-else="">
                                                        <td></td>
                                                    </t>
                                                    <td><t t-esc="product.pos_categ_id[1]"/></td>
                                                    <td><t t-esc="product.lst_price"/></td>
                                                    <td><button t-on-click="editProduct(product.id)"><i class="fa fa-pencil"></i></button></td>
                                                </tr>
                                            </t>
                                        </tbody>
                                    </table>
